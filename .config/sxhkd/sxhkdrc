# Terminal
super + Return
	ghostty

# App launcher
super + @space
	rofi -show drun -theme ben256

# Reload sxhkd
super + Escape
	pkill -USR1 -x sxhkd

# Close / kill window
super + {_,shift + }w
	bspc node -{c,k}

# Alternate between tiled and monocle layout
super + m
	bspc desktop -l next

# Swap current node with the biggest window
super + g
	bspc node -s biggest.window

# Set window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# Focus / move window in direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# Focus desktop
super + {1-9,0}
	bspc desktop -f '^{1-9,10}'

# Send window to desktop
super + shift + {1-9,0}
	bspc node -d '^{1-9,10}'

# Expand window
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# Shrink window
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# Preselect direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# Cancel preselect
super + ctrl + space
	bspc node -p cancel
